#include <stdio.h>
#include <string.h>
int S(char input[]);
int belongsToLanguage(char input[]) {
  if (strlen(input) == 0) {
    return 1; 
  } else if (input[0] == '0' && input[strlen(input)-1] == '0') {
    S(input); 
    return 1;
  }
  return 0;
}
int S(char input[]) {
  if (strlen(input) == 2) {
    return 1;
  } else {
    int i = 1;
    while (i < strlen(input) - 1) {
      if (input[0] == '0' && input[strlen(input)-1] == '0' && input[i] == '0') {
        printf("S -> 0S0\n");
        input[i] = 'S'; 
        S(input);
        i++; 
      } else if (input[i] == '1') {
        printf("S -> A\n");
        input[i] = 'A';
        S(input);
        i++; 
      } else {
        return 0; 
      }
    }
  }
}

int main() {
  char input[100];
  printf("Enter an input string: ");
  scanf("%s", input);
  if (belongsToLanguage(input)) {
    printf("Accepted\n");
  } else {
    printf("Rejected\n");
  }
  return 0;
}
